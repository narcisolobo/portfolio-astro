---
import { Image } from "astro:assets";
import LinkedIn from "@/assets/linkedin.svg";
import { Mail } from "@lucide/astro";
---

<footer class="bg-base-300 py-10">
  <div class="container mx-auto px-4">
    <div class="footer sm:footer-horizontal font-sans">
      <aside>
        <h3 class="font-display text-xl font-bold">Narciso Lobo</h3>
        <p class="text-base-content/80">
          I'm a full-stack software engineer and the founder of{" "}
          <a
            href="https://cisocodes.com"
            target="_blank"
            class="link-hover text-orange-700"
          >
            CisoCodes
          </a>
          .
        </p>
        <div class="flex space-x-4">
          <a
            target="_blank"
            href="https://www.linkedin.com/in/narcisolobo/"
            class="text-base-content/80 hover:text-base-content transition-all"
            aria-label="LinkedIn"
          >
            <Image src={LinkedIn} alt="LinkedIn" class="h-5 w-5" />
          </a>
        </div>
      </aside>
      <nav>
        <h4 class="font-display text-lg font-semibold">Quick Links</h4>
        <ul class="grid gap-4">
          <li>
            <a
              href="#home"
              class="text-base-content/80 hover:text-base-content transition-all"
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="#projects"
              class="text-base-content/80 hover:text-base-content transition-all"
            >
              Projects
            </a>
          </li>
          <li>
            <a
              href="#about"
              class="text-base-content/80 hover:text-base-content transition-all"
            >
              What I Do
            </a>
          </li>
          <li>
            <a
              href="#technologies"
              class="text-base-content/80 hover:text-base-content transition-all"
            >
              Technologies
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="text-base-content/80 hover:text-base-content transition-all"
            >
              Contact
            </a>
          </li>
        </ul>
      </nav>
      <div>
        <h4 class="font-display text-lg font-semibold">Contact Me</h4>
        <ul>
          <li>
            <a
              href="#contact"
              class="text-base-content/80 hover:text-base-content flex items-center transition-all"
            >
              <Mail class="mt-0.5 mr-2 h-5 w-5 flex-shrink-0 transition-all" />
              <span> Email</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
